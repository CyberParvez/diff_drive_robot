<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="diff_drive_robot">

    <xacro:include filename="$(find diff_drive_robot)/urdf/robot.gazebo" />
    <xacro:include filename="inertial_macros.xacro" />
    
    <xacro:arg name="prefix" default="robot_1"/>

    <xacro:macro name="diff_drive_robot" params="prefix xyz:='0 0 0' rpy:='0 0 0'">

        <!-- Base footprint (reference frame) -->
        <link name="${prefix}_base_footprint">
            <visual>
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
            </visual>
        </link>

        <!-- Main base link --> 
        <joint name="${prefix}_base_joint" type="fixed">
            <parent link="${prefix}_base_footprint"/>
            <child link="${prefix}_base_link"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </joint>

        <link name="${prefix}_base_link">
            <visual>
                <origin xyz="0.15 0 0.075"/>
                <geometry>
                    <box size="0.4 0.3 0.15"/>
                </geometry>
                <material name="${prefix}_base_material">
                    <color rgba="0.40 0.23 0.72 1.0"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.15 0 0.075"/>
                <geometry>
                    <box size="0.3 0.3 0.15"/>
                </geometry>
            </collision>
            <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
                <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
            </xacro:inertial_box>
        </link>

        <!-- Left wheel -->
        <joint name="${prefix}_left_wheel_joint" type="continuous">
            <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0"/>
            <child link="${prefix}_left_wheel"/>
            <parent link="${prefix}_base_link"/>
            <axis xyz="0 0 1"/>
        </joint>

        <link name="${prefix}_left_wheel">
            <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
            <collision>
                <geometry>
                    <cylinder radius="0.05" length="0.04"/>
                </geometry>
            </collision>
            <visual>
                <geometry>
                    <cylinder radius="0.05" length="0.04"/>
                </geometry>
                <material name="${prefix}_wheel_material">
                    <color rgba="0.0 0.0 0.0 1.0"/>
                </material>
            </visual>
        </link>

        <!-- Right wheel -->
        <joint name="${prefix}_right_wheel_joint" type="continuous">
            <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0"/>
            <child link="${prefix}_right_wheel"/>
            <parent link="${prefix}_base_link"/>
            <axis xyz="0 0 -1"/>
        </joint>

        <link name="${prefix}_right_wheel">
            <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
            <visual>
                <geometry>
                    <cylinder radius="0.05" length="0.04"/>
                </geometry>
                <material name="${prefix}_wheel_material">
                    <color rgba="0.0 0.0 0.0 1.0"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.05" length="0.04"/>
                </geometry>
            </collision>
        </link>

        <!-- Castor wheel -->
        <joint name="${prefix}_castor_wheel_joint" type="fixed">
            <parent link="${prefix}_base_link"/>
            <child link="${prefix}_castor_wheel"/>
            <origin xyz="0.24 0 0"/>
        </joint>

        <link name="${prefix}_castor_wheel">
            <xacro:inertial_sphere mass="0.05" radius="0.05">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_sphere>
            <visual>
                <geometry>
                    <sphere radius="0.05"/>
                </geometry>
                <material name="${prefix}_castor_material">
                    <color rgba="0.62 0.62 0.62 1.0"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <sphere radius="0.05"/>
                </geometry>
            </collision>
        </link>

        <!-- Lidar Sensor -->
        <joint name="${prefix}_laser_joint" type="fixed">
            <parent link="${prefix}_base_footprint"/>
            <child link="${prefix}_laser_frame"/>
            <origin xyz="0.1 0 0.175" rpy="0 0 0"/>
        </joint>

        <link name="${prefix}_laser_frame">
            <visual>
                <origin xyz="0 0 0"/>
                <geometry>
                    <cylinder length="0.04" radius="0.05"/>
                </geometry>
                <material name="${prefix}_laser_material">
                    <color rgba="0.13 0.13 0.13 1.0"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0"/>
                <geometry>
                    <cylinder length="0.04" radius="0.05"/>
                </geometry>
            </collision>
            <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>

        <!-- IMU Sensor -->
        <joint name="${prefix}_imu_joint" type="fixed">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <parent link="${prefix}_base_footprint"/>
            <child link="${prefix}_imu_link" />
        </joint>

        <link name="${prefix}_imu_link">
        </link>

        <!-- Gazebo Properties -->
        <xacro:gazebo_plugins prefix="${prefix}" />

        <gazebo reference="${prefix}_left_wheel">
            <mu1>1.0</mu1>
            <mu2>1.0</mu2>
        </gazebo>

        <gazebo reference="${prefix}_right_wheel">
            <mu1>1.0</mu1>
            <mu2>1.0</mu2>
        </gazebo>

        <gazebo reference="${prefix}_castor_wheel">
            <mu1>0.000001</mu1>
            <mu2>0.000001</mu2>
        </gazebo>

        <gazebo reference="${prefix}_base_footprint">
            <mu1>1.0</mu1>
            <mu2>1.0</mu2>
        </gazebo>

    </xacro:macro>
    <xacro:diff_drive_robot prefix="$(arg prefix)"/>
</robot>